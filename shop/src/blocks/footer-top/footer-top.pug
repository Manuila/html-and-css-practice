mixin footer-top()
  section.section-footer-top
    .container
      .footer-top
        .footer-top__column
          h3.footer-top__title Customer Service
          ul.footer-top__list
            - var items = ['Ð¡ontact', 'FAQ', 'Terms of payment', 'Terms of sale', 'Delivery terms and conditions', 'Returns and Refunds']
                each item in items
                  li.footer-top__item
                    a.footer-top__link(href="#")=item
        .footer-top__column
          h3.footer-top__title Information
          ul.footer-top__list
            - var items = ['Affiliate', 'Cookies', 'How to Shop', 'About Nelly', 'Investor relations']
                each item in items
                  li.footer-top__item
                    a.footer-top__link(href="#")=item
        .footer-top__column
          h3.footer-top__title Campaigns
          ul.footer-top__list
            - var items = ['Evening Dresses', 'Makeup', 'Fashion forward', 'Training clothes', 'Special Occasion Dresses']
                each item in items
                  li.footer-top__item
                    a.footer-top__link(href="#")=item
        .footer-top__column
          h3.footer-top__title Stores
          ul.footer-top__list
            - var items = ['Paris', 'New York', 'London', 'Madrid', 'Tokio']
                each item in items
                  li.footer-top__item
                    a.footer-top__link(href="#")=item
        .footer-top__column
          h3.footer-top__title Social
          .footer-top-social-icons
            ul.footer-top-social-icons__list
              li.footer-top-social-icons__item_tw
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-twitter.fa-stack-1x
              li.footer-top-social-icons__item_pr
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-pinterest.fa-stack-1x
              li.footer-top-social-icons__item_fb
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-facebook.fa-stack-1x
              li.footer-top-social-icons__item_gp
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-google-plus.fa-stack-1x
              li.footer-top-social-icons__item_tr
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-tumblr.fa-stack-1x
              li.footer-top-social-icons__item_vm
                a.footer-top-social-icons__link(href="#")
                  span.fa-stack.fa-lg
                    i.footer-top-social-icons__icon_circle.fa.fa-circle.fa-stack-2x
                    i.footer-top-social-icons__icon.fa.fa-vimeo.fa-stack-1x
        .footer-top__column.footer-top__column_secure
